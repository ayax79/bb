<?xml version="1.0" encoding="UTF-8"?>
<!--
presentation layer config
-->
<tc:tc-config xmlns:tc="http://www.terracotta.org/config"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://www.terracotta.org/schema/terracotta-4.xsd">
    <servers>
        <server name="localhost" host="localhost">
            <dso-port>9510</dso-port>
            <jmx-port>9520</jmx-port>
            <data>target/terracotta/server/data</data>
            <logs>target/terracotta/server/logs</logs>
            <statistics>target/terracotta/server/statistics</statistics>
            <dso>
                <persistence>
                    <mode>permanent-store</mode>
                </persistence>
            </dso>
        </server>
        <update-check>
            <enabled>true</enabled>
        </update-check>
    </servers>
    <clients>
        <logs>target/terracotta/clients/logs/%(tc.nodeName)</logs>
        <statistics>target/terracotta/clients/statistics/%(tc.nodeName)</statistics>
        <modules>
            <module name="tim-jetty-6.1" version="2.0.0-SNAPSHOT"/>
            <module name="tim-annotations" version="1.4.0-SNAPSHOT"/>
            <module name="tim-concurrent-collections" version="1.2.0-SNAPSHOT"/>
            <module name="tim-map-evictor" version="1.2.0-SNAPSHOT"/>
        </modules>
    </clients>
    <application>
        <dso>
            <additional-boot-jar-classes>
                <include>java.net.InetAddress</include>
                <include>java.net.Inet6Address</include>
                <include>java.io.OutputStream</include>
            </additional-boot-jar-classes>
            <instrumented-classes>
                <include>
                    <class-expression>net.sourceforge.stripes.controller.multipart..</class-expression>
                </include>
                <include>
                    <class-expression>org.apache.commons.fileupload.disk..</class-expression>
                </include>
                <include>
                    <class-expression>net.sourceforge.stripes.action..</class-expression>
                </include>
                <include>
                    <class-expression>org.apache.commons.io.output.*</class-expression>
                </include>
                <include>
                    <class-expression>org.jsecurity.web.SavedRequest</class-expression>
                </include>
            </instrumented-classes>
            <transient-fields>
                <field-name>org.apache.commons.io.output.DeferredFileOutputStream.currentOutputStream</field-name>
            </transient-fields>
        </dso>
        <spring>
            <jee-application name="presentation">
                <application-contexts>
                    <application-context>
                        <paths>
                            <path>spring/*.xml</path>
                        </paths>
                        <beans>
                            <bean name="securityCacheManager"/>
                            <!--<bean name="txManager"/>-->
                            <!--<bean name="securityManager"/>-->
                            <!--<bean name="dao1">-->
                            <!--<non-distributed-field>-->
                            <!--connectionPool-->
                            <!--</non-distributed-field>-->
                            <!--</bean>-->
                        </beans>
                        <root-name>presentation</root-name>
                    </application-context>
                </application-contexts>
            </jee-application>
        </spring>
    </application>
</tc:tc-config>
