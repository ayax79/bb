                                </systemProperty>
                                <systemProperty>
                                    <name>library.parent</name>
                                    <value>${basedir}/src/main/webapp</value>
                                </systemProperty>
                                <systemProperty>
                                    <name>blackbox.console</name>
                                    <value>${blackbox.console}</value>
                                </systemProperty>
                                <systemProperty>
                                    <name>java.net.preferIPv4Stack</name>
                                    <value>true</value>
                                </systemProperty>
                            </systemProperties>
                            <connectors>
                                <connector implementation='org.mortbay.jetty.nio.SelectChannelConnector'>
                                    <port>${presentation.port}</port>
                                </connector>
                            </connectors>
                            <!--<contextPath>/${presentation.context}</contextPath>-->
                            <contextPath>/community</contextPath>
                            <scanIntervalSeconds>${jetty.scanIntervalSeconds}</scanIntervalSeconds>
                            <scanTargetPatterns>
                                <scanTargetPattern>
                                    <directory>src/main/webapp/WEB-INF</directory>
                                    <excludes>
                                        <exclude>**/*.jsp</exclude>
                                        <exclude>**/jetty-web.xml</exclude>
                                    </excludes>
                                    <includes>
                                        <include>**/*.properties</include>
                                        <include>**/*.xml</include>
                                    </includes>
                                </scanTargetPattern>
                            </scanTargetPatterns>
                            <stopPort>8866</stopPort>
                            <stopKey>blackbox</stopKey>
                            <webDefaultXml>src/main/resources/webdefault.xml</webDefaultXml>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
