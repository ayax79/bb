                            </webResources>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.mortbay.jetty</groupId>
                        <artifactId>maven-jetty-plugin</artifactId>
                        <version>6.1.16</version>
                        <configuration>
                            <systemProperties>
                                <systemProperty>
                                    <name>org.mortbay.jetty.Request.maxFormContentSize</name>
                                    <value>5000000</value>
                                </systemProperty>
                                <systemProperty>
                                    <name>local</name>
