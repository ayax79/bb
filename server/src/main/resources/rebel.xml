<?xml version="1.0" encoding="UTF-8"?>
<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.zeroturnaround.com" xsi:schemaLocation="http://www.zeroturnaround.com http://www.zeroturnaround.com/alderaan/rebel-2_0.xsd">

	<classpath>
        <dir name="${blackbox.root}/core/target/classes" />
		<dir name="${blackbox.root}/server/src/main/resources">
			<include name="**/spring/*xml"/>
		</dir>
		<dir name="${blackbox.root}/server/target/classes">
		</dir>
	</classpath>

	<web>
		<link target="/">
			<dir name="${blackbox.root}/server/target/server-1.0.0.b15-SNAPSHOT/" >
				<include name="library/css/**"/>
                <include name="library/js/**" />
			</dir>
		</link>
		<link target="/">
			<dir name="${blackbox.root}/server/src/main/webapp">
				<exclude name="library/css/**"/>
				<exclude name="library/js/**"/>
			</dir>
		</link>
	</web>

</application>
