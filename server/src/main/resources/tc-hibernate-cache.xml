<?xml version="1.0" encoding="UTF-8"?>

<terracotta-hibernate-cache-configuration>

  <default-configuration>
    <time-to-idle-seconds>60</time-to-idle-seconds>
    <time-to-live-seconds>120</time-to-live-seconds>
  </default-configuration>

<!-- The default configuration applies to any properties not
     defined in the <cache> blocks below. -->

  <cache>
    <region-name>com.blackbox.foundation.commerce.Merchant</region-name>
    <region-name>com.blackbox.foundation.commerce.Product</region-name>
    <region-name>com.blackbox.foundation.commerce.ShoppingCart</region-name>
    <region-name>com.blackbox.foundation.media.ContentMetaData</region-name>
    <region-name>com.blackbox.foundation.occasion.Promoter</region-name>
    <region-name>com.blackbox.foundation.security.Permissions</region-name>
    <region-name>com.blackbox.foundation.security.Role</region-name>
    <region-name>com.blackbox.foundation.social.Category</region-name>
    <region-name>com.blackbox.foundation.social.Relationship</region-name>
    <region-name>com.blackbox.foundation.user.User</region-name>
    <configuration>
      <time-to-idle-seconds>120</time-to-idle-seconds>
      <time-to-live-seconds>600</time-to-live-seconds>
    </configuration>
  </cache>

  <!-- More cache blocks here as needed. -->

</terracotta-hibernate-cache-configuration>